//Формы
mixin input-tel(object)
    input.input-text(type='text' name='tel' required=object.required ? true: false placeholder = object.placeholder ? object.placeholder: 'Телефон*(вводится без 8)')

mixin input-name(object)
    input.input-text(type='text' name='name' required=object.required ? true: false placeholder = object.placeholder ? object.placeholder: 'Ваше имя')

mixin input-email(object)
    input.input-text(type='text' name='email' required=object.required ? true: false placeholder = object.placeholder ? object.placeholder: 'Ваша почта')
mixin input-area(object)
    textarea.input-text(placeholder="Ваш комментарий..")
mixin input-submit(object)
    input.input-submit(type='submit' class=object.style value = object.value ? object.value: 'Отправить')


//Графика
mixin setImg(object)
    picture
        source(srcset=object.webp media="(min-width: 767px)" alt=object.alt type='image/webp')
        source(srcset=object.mWebp media="(min-width: 0) and (max-width: 767px)" alt=object.alt type='image/webp')
        img(src=object.img srcset=mImg + ' 767w' alt=object.alt)

mixin setSvg(object)
    svg.icon
        use(xlink:href='images/skipped-optim.svg#' + object.name)

//Текстовка
mixin sectionTitle(object)
    h2.section-title !{object.text}

mixin sectionSubTitle(object)
    span.section-subtitle !{object.text}

mixin formTitle(object)
    h6.form-title !{object.text}
mixin formText(object)
    p.form-text !{object.text}
mixin formPolice(object)
    p.form-police !{object.text}



mixin servicesCart(object)
    .section-services__cart
        .section-services__cart-inner
            .section-services__cart-title !{object.title}
            .section-services__cart-body
                .section-services__cart-img
                    +setImg({
                        webp: 'images/content/section-services/' + object.src +  '.webp',
                        mWebp: 'images/content/section-services/' + object.src + '.webp',
                        img: 'images/content/section-services/'+object.src+'.jpg',
                        mImg: 'images/content/section-services/'+object.src+'.jpg'
                    })
                div(data-popup=object.popup).section-services__cart-more Подробнее
                .section-services__cart-order.open-popup-form Узнать стоимость

mixin servicesItem(object)
    .section-services-additional__item
        .section-services-additional__item-inner
            .section-services-additional__item-left
                +setSvg({name: object.icon})
            .section-services-additional__item-right
                .section-services-additional__item-title !{object.title}
                .section-services-additional__item-subtitle !{object.subtitle}
mixin servicesSlide(object)
    .section-services-more__slide
        .section-services-more__sldie-inner
            .section-services-more__slide-img
                +setImg({
                    webp: object.webp,
                    mWebp: object.mWebp,
                    img: object.img,
                    mImg: object.mImg
                })